{
	"manifest_version": 3,
	"name": "YPEE - YouTube Playlist Exporter",
	"version": "1.0",
	"description": "Export YouTube playlists and 'Watch Later' to text files.",
	"permissions": [
		"activeTab",
		"scripting",
		"clipboardWrite"
	],
	"content_scripts": [
		{
			"matches": [
				"https://www.youtube.com/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"action": {
		"default_popup": "popup.html"
	}
}
